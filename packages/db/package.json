{
  "name": "@monorepo/db",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "types": ["./dist/types.d.ts"]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "db:generate": "dotenv -e ../../apps/api/.env -- drizzle-kit generate",
    "db:migrate": "dotenv -e ../../apps/api/.env -- drizzle-kit migrate",
    "db:push": "dotenv -e ../../apps/api/.env -- drizzle-kit push",
    "db:studio": "dotenv -e ../../apps/api/.env -- drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "^0.38.3",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.1",
    "tsup": "^8.3.5",
    "typescript": "^5.3.3"
  }
}
