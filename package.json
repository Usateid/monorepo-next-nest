{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @monorepo/shared build && pnpm --filter @monorepo/db build && pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @monorepo/web dev",
    "dev:api": "pnpm --filter @monorepo/api dev",
    "build": "pnpm --filter @monorepo/shared build && pnpm --filter @monorepo/db build && pnpm -r build",
    "build:web": "pnpm --filter @monorepo/web build",
    "build:api": "pnpm --filter @monorepo/api build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.1"
}

