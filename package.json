{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @monorepo/web dev",
    "dev:api": "pnpm --filter @monorepo/api dev",
    "build": "pnpm --filter \"./packages/**\" build && pnpm -r build",
    "build:web": "pnpm --filter @monorepo/web build",
    "build:api": "pnpm --filter @monorepo/api build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "postinstall": "pnpm --filter \"./packages/**\" build"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.26.1"
}
